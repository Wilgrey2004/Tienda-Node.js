<section
  class="flex flex-col w-full h-full items-center justify-center bg-slate-500 gap-5"
>
  <!-- quiero covertir esto es un carrucel de 3 imagenes -->
  <article class="flex items-center justify-center rounded-lg mb-10">
    <div
      id="Carrucel"
      class="flex justify-center items-center w-[1200px] h-[75vh]"
    >
      <!-- Panel 1 -->
      <div
        class="group relative z-0 flex-initial w-[200px] hover:drop-shadow-md hover:flex-auto hover:rounded-lg hover:z-10 transition-all duration-100 ease-in h-[90%] bg-cover bg-center bg-[url('https://i.postimg.cc/RFYQsndw/Tecnologia.png')]"
      >
        <p
          class="absolute inset-0 flex items-center justify-center font-bold text-2xl text-white bg-black bg-opacity-50 opacity-0 group-hover:opacity-100 transition-opacity duration-300"
        >
          Tecnologia
        </p>
      </div>

      <!-- Panel 2 -->
      <div
        class="group relative z-0 flex-initial w-[200px] hover:drop-shadow-md hover:flex-auto hover:rounded-lg hover:z-10 transition-all duration-100 ease-in h-[90%] bg-cover bg-center bg-[url('https://i.postimg.cc/CxwPfkQK/cutting-metal-with-plasma-equipment-plant.jpg')]"
      >
        <p
          class="absolute inset-0 flex items-center justify-center font-bold text-2xl text-white bg-black bg-opacity-50 opacity-0 group-hover:opacity-100 transition-opacity duration-300"
        >
          Trabajos Duros
        </p>
      </div>

      <!-- Panel 3 -->
      <div
        class="group relative z-0 flex-initial hover:drop-shadow-md hover:flex-auto hover:rounded-lg hover:z-10 transition-all duration-100 ease-in w-[200px] h-[90%] bg-cover bg-center bg-[url('https://i.postimg.cc/XNTtXZWZ/woman-cooking-kitchen.jpg')]"
      >
        <p
          class="absolute inset-0 flex items-center justify-center font-bold text-2xl text-white bg-black bg-opacity-50 opacity-0 group-hover:opacity-100 transition-opacity duration-300"
        >
          Cocina
        </p>
      </div>
    </div>
  </article>

  <!-- article padre -->

  <article class="flex flex-col items-center gap-10">
    <!-- Aqui voy a poner el titulo de la seccion de abajo -->
    <article class="">
      <h2 class="text-3xl font-bold text-black">Productos</h2>
    </article>
    <!-- Fin Titulo -->

    <!-- este div es el que guarda las cartas -->
    <div class="flex gap-8 flex-wrap flex-1 justify-center items-start">
      <!-- esta es la carta -->
      <% ProductosList.forEach((producto) => { %>
      <div
        class="carta flex flex-col bg-white shadow-md rounded-lg p-4 w-60 min-h-[300px] items-center"
      >
        <!-- Imagen -->
        <div>
          <img
            class="w-full h-40 object-cover rounded-md"
            src="<%= producto.UrlImagen %>"
            alt="<%= producto.Descripcion %>"
          />
          <hr class="my-2" />
        </div>
        <!-- Texto -->
        <div class="flex flex-col flex-1 gap-2 text-center">
          <h2 class="text-lg font-semibold">
            <%= producto.Nombre %> | $<%= producto.Precio %>
          </h2>
        </div>
        <!-- Botones -->
        <div class="mt-auto flex gap-2">
          <form class="Acciones flex gap-2">
            <button
              type="submit"
              value="<%= Idusuario %>,<%= producto.IdProducto %>"
              class="btn-sky Carrito"
            >
              Carrito
            </button>
            <button type="submit" class="btn-red Favorito">Detalles</button>
          </form>
        </div>
      </div>
      <% }); %>
      <!-- Aqui Termina la carta -->
    </div>
  </article>
  <!-- Aqui termina el article padrea en donde se encuentran las cartas... -->
</section>
